{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": false,              // TEMP: relax to reduce noise
    "skipLibCheck": true,         // ignore type issues inside node_modules
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["astro/client"]
  },
  "include": ["src", "astro.config.*", "env.d.ts"]
}

