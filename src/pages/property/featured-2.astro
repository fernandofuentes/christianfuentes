                <div class="relative aspect-square overflow-hidden shadow-2xl transition-all duration-500 group-hover:shadow-gold/10">
                  <img
                    src={image.src}
                    alt={image.alt}
                    class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
