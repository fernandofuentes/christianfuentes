---
---

<section class="py-20 bg-navy" itemscope itemtype="https://schema.org/Dataset">
    <!-- Luxury Background Pattern -->
    <div class="relative overflow-hidden">
        
        <div class="relative z-10 w-full px-12 sm:px-18 lg:px-24">
            <!-- Luxury Section Heading -->
            <div class="text-center py-20 relative">
                <!-- Subtitle -->
                <p class="text-gold text-sm font-medium tracking-[0.3em] uppercase mb-6 font-poppins">
                    Market Intelligence
                </p>
                
                <!-- Main Title with Luxury Styling -->
                <div class="relative">
                    <h2 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-8 font-playfair leading-tight">
                        Chino Hills
                        <span class="block text-gold italic">Market Data</span>
                    </h2>
                    
                    <!-- Decorative flourish -->
                    <div class="flex items-center justify-center space-x-4 mb-8">
                        <div class="w-16 h-px bg-gradient-to-r from-transparent to-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-8 h-px bg-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-16 h-px bg-gradient-to-l from-transparent to-gold"></div>
                    </div>
                </div>
                
                <!-- Elegant description -->
                <p class="text-white/80 text-lg max-w-2xl mx-auto leading-relaxed font-light">
                    Current market trends and statistics for Chino Hills real estate, updated monthly by Christian Fuentes
                </p>
            </div>
            
            <!-- Market Stats Grid -->
            <div class="max-w-6xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
                    <!-- Stat 1 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">$1.2M</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Median Home Price</div>
                            <div class="text-green-400 text-xs mt-1">↑ 8.5% YoY</div>
                        </div>
                    </div>
                    
                    <!-- Stat 2 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">22</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Days on Market</div>
                            <div class="text-green-400 text-xs mt-1">↓ 15% vs Last Year</div>
                        </div>
                    </div>
                    
                    <!-- Stat 3 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">98%</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Sale to List Price</div>
                            <div class="text-green-400 text-xs mt-1">↑ 2% vs Last Year</div>
                        </div>
                    </div>
                    
                    <!-- Stat 4 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">156</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Homes Sold (YTD)</div>
                            <div class="text-green-400 text-xs mt-1">↑ 12% vs Last Year</div>
                        </div>
                    </div>
                </div>

                <!-- Market Insights -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <!-- Content -->
                    <div>
                        <h3 class="text-3xl font-bold text-gold mb-6 font-playfair">
                            Chino Hills Market Insights
                        </h3>
                        <div class="space-y-6">
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Strong Seller's Market</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Low inventory and high demand continue to drive competitive pricing in Chino Hills, with homes selling quickly.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Premium School Districts</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Chino Valley Unified School District's excellent ratings continue to attract families, supporting property values.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Investment Opportunity</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Strategic location between LA and Orange County makes Chino Hills an attractive long-term investment.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-8">
                            <a href="/consultation" class="btn-primary-yellow" aria-label="Get detailed Chino Hills market report">
                                <span>Get Detailed Market Report</span>
                            </a>
                        </div>
                    </div>
                    
                    <!-- Visual Element -->
                    <div class="relative">
                        <div class="aspect-square bg-gradient-to-br from-gold/20 to-gold/5 border border-gold/30 flex items-center justify-center">
                            <div class="text-center">
                                <div class="text-6xl font-bold text-gold mb-4 font-playfair">2025</div>
                                <div class="text-white/80 text-lg">Market Forecast</div>
                                <div class="text-white/60 text-sm mt-2">Continued Growth Expected</div>
                            </div>
                        </div>
                        
                        <!-- Decorative elements -->
                        <div class="absolute -top-4 -left-4 w-8 h-8 border-l-2 border-t-2 border-gold/50"></div>
                        <div class="absolute -top-4 -right-4 w-8 h-8 border-r-2 border-t-2 border-gold/50"></div>
                        <div class="absolute -bottom-4 -left-4 w-8 h-8 border-l-2 border-b-2 border-gold/50"></div>
                        <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r-2 border-b-2 border-gold/50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>