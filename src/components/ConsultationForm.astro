<section id="consultation-form" class="py-20 bg-navy" itemscope itemtype="https://schema.org/ContactPage">
    <!-- Luxury Background Pattern -->
    <div class="relative overflow-hidden">
      
        <div class="relative z-10 w-full px-12 sm:px-18 lg:px-24">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <p class="text-gold text-sm font-medium tracking-[0.3em] uppercase mb-6 font-poppins">
                    Get Started Today
                </p>
                
                <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 font-playfair">
                    Schedule Your Free Consultation
                </h2>
                
                <p class="text-white/80 text-lg max-w-2xl mx-auto leading-relaxed font-light">
                    Tell us about your real estate goals and we'll create a personalized strategy for your success
                </p>
            </div>

            <!-- Consultation Form -->
            <div class="max-w-4xl mx-auto">
                <form class="space-y-8" role="form" aria-label="Schedule consultation with Christian Fuentes">
                    <!-- Service Type Selection -->
                    <div class="mb-8">
                        <h3 class="text-white text-lg font-semibold mb-4">What can we help you with?</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <label class="consultation-option cursor-pointer">
                                <input type="radio" name="service" value="buying" class="sr-only">
                                <div class="p-6 border border-white/20 text-center transition-all duration-300 hover:border-gold/50 hover:bg-gold/10">
                                    <div class="text-3xl mb-3">üè†</div>
                                    <div class="text-white font-semibold">Buying a Home</div>
                                    <div class="text-white/70 text-sm mt-2">Find your dream home</div>
                                </div>
                            </label>
                            
                            <label class="consultation-option cursor-pointer">
                                <input type="radio" name="service" value="selling" class="sr-only">
                                <div class="p-6 border border-white/20 text-center transition-all duration-300 hover:border-gold/50 hover:bg-gold/10">
                                    <div class="text-3xl mb-3">üí∞</div>
                                    <div class="text-white font-semibold">Selling a Home</div>
                                    <div class="text-white/70 text-sm mt-2">Get maximum value</div>
                                </div>
                            </label>
                            
                            <label class="consultation-option cursor-pointer">
                                <input type="radio" name="service" value="investing" class="sr-only">
                                <div class="p-6 border border-white/20 text-center transition-all duration-300 hover:border-gold/50 hover:bg-gold/10">
                                    <div class="text-3xl mb-3">üìà</div>
                                    <div class="text-white font-semibold">Investment Property</div>
                                    <div class="text-white/70 text-sm mt-2">Build wealth through real estate</div>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Personal Information -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="firstName" class="block text-white text-sm font-medium mb-2">First Name *</label>
                            <input type="text"
                                   id="firstName"
                                   name="firstName"
                                   required
                                   aria-required="true"
                                   class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent">
                        </div>
                        
                        <div>
                            <label for="lastName" class="block text-white text-sm font-medium mb-2">Last Name *</label>
                            <input type="text"
                                   id="lastName"
                                   name="lastName"
                                   required
                                   aria-required="true"
                                   class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="email" class="block text-white text-sm font-medium mb-2">Email Address *</label>
                            <input type="email"
                                   id="email"
                                   name="email"
                                   required
                                   aria-required="true"
                                   class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent">
                        </div>
                        
                        <div>
                            <label for="phone" class="block text-white text-sm font-medium mb-2">Phone Number *</label>
                            <input type="tel"
                                   id="phone"
                                   name="phone"
                                   required
                                   aria-required="true"
                                   class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent">
                        </div>
                    </div>

                    <!-- Location & Timeline -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="location" class="block text-white text-sm font-medium mb-2">Preferred Area</label>
                            <select id="location"
                                    name="location"
                                    class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent">
                                <option value="">Select an area</option>
                                <option value="chino-hills">Chino Hills</option>
                                <option value="diamond-bar">Diamond Bar</option>
                                <option value="beverly-hills">Beverly Hills</option>
                                <option value="manhattan-beach">Manhattan Beach</option>
                                <option value="malibu">Malibu</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="timeline" class="block text-white text-sm font-medium mb-2">Timeline</label>
                            <select id="timeline"
                                    name="timeline"
                                    class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent">
                                <option value="">Select timeline</option>
                                <option value="asap">ASAP</option>
                                <option value="1-3-months">1-3 months</option>
                                <option value="3-6-months">3-6 months</option>
                                <option value="6-12-months">6-12 months</option>
                                <option value="just-looking">Just looking</option>
                            </select>
                        </div>
                    </div>

                    <!-- Budget Range -->
                    <div>
                        <label for="budget" class="block text-white text-sm font-medium mb-2">Budget Range (Optional)</label>
                        <select id="budget"
                                name="budget"
                                class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent">
                            <option value="">Select budget range</option>
                            <option value="under-500k">Under $500K</option>
                            <option value="500k-750k">$500K - $750K</option>
                            <option value="750k-1m">$750K - $1M</option>
                            <option value="1m-1.5m">$1M - $1.5M</option>
                            <option value="1.5m-2m">$1.5M - $2M</option>
                            <option value="over-2m">Over $2M</option>
                        </select>
                    </div>

                    <!-- Message -->
                    <div>
                        <label for="message" class="block text-white text-sm font-medium mb-2">Tell us about your goals</label>
                        <textarea rows="4"
                                  id="message"
                                  name="message"
                                  placeholder="What are your real estate goals? Any specific requirements or questions?"
                                  class="w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent resize-none"></textarea>
                    </div>

                    <!-- Preferred Contact Method -->
                    <div>
                        <h4 class="text-white text-sm font-medium mb-3">Preferred Contact Method</h4>
                        <div class="flex flex-wrap gap-4">
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" name="contact_method" value="phone" class="sr-only">
                                <div class="w-5 h-5 border border-white/40 mr-3 flex items-center justify-center">
                                    <div class="w-3 h-3 bg-gold hidden"></div>
                                </div>
                                <span class="text-white">Phone Call</span>
                            </label>
                            
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" name="contact_method" value="email" class="sr-only">
                                <div class="w-5 h-5 border border-white/40 mr-3 flex items-center justify-center">
                                    <div class="w-3 h-3 bg-gold hidden"></div>
                                </div>
                                <span class="text-white">Email</span>
                            </label>
                            
                            <label class="flex items-center cursor-pointer">
                                <input type="checkbox" name="contact_method" value="text" class="sr-only">
                                <div class="w-5 h-5 border border-white/40 mr-3 flex items-center justify-center">
                                    <div class="w-3 h-3 bg-gold hidden"></div>
                                </div>
                                <span class="text-white">Text Message</span>
                            </label>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center pt-6">
                        <button type="submit"
                               class="btn-primary-yellow"
                               aria-label="Schedule your free consultation">
                            <span>Schedule My Free Consultation</span>
                        </button>
                        
                        <p class="text-white/60 text-sm mt-4">
                            * Required fields. We respect your privacy and will never share your information.
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle service type selection
            const serviceOptions = document.querySelectorAll('.consultation-option');
            serviceOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active state from all options
                    serviceOptions.forEach(opt => {
                        opt.querySelector('div').classList.remove('border-gold', 'bg-gold/20');
                        opt.querySelector('div').classList.add('border-white/20');
                    });
                    
                    // Add active state to clicked option
                    const div = this.querySelector('div');
                    div.classList.remove('border-white/20');
                    div.classList.add('border-gold', 'bg-gold/20');
                    
                    // Check the radio button
                    this.querySelector('input[type="radio"]').checked = true;
                });
            });

            // Handle checkbox styling
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const indicator = this.parentElement.querySelector('div div');
                    if (this.checked) {
                        indicator.classList.remove('hidden');
                    } else {
                        indicator.classList.add('hidden');
                    }
                });
            });

            // Form submission
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Here you would typically send the form data to your backend
                // For now, we'll show a success message
                alert('Thank you! We\'ll contact you within 24 hours to schedule your free consultation.');
                
                // Reset form
                form.reset();
                
                // Reset service options
                serviceOptions.forEach(opt => {
                    opt.querySelector('div').classList.remove('border-gold', 'bg-gold/20');
                    opt.querySelector('div').classList.add('border-white/20');
                });
                
                // Reset checkboxes
                checkboxes.forEach(checkbox => {
                    const indicator = checkbox.parentElement.querySelector('div div');
                    indicator.classList.add('hidden');
                });
            });
        });
    </script>
</section>