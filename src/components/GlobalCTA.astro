<section id="contact" class="relative py-20 overflow-hidden" itemscope itemtype="https://schema.org/ContactPage">
    <!-- Fixed Background Parallax -->
    <div class="absolute inset-0 fixed-parallax-bg" style="background-image: url('/images/white-marble-background.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed;"></div>
    
    <!-- Content Overlay -->
    <div class="relative z-10">
    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto text-center">
            <div class="mb-12">
                <div class="mb-6">
                    <h2 class="text-4xl font-bold text-navy mb-2" itemprop="name">Connect with</h2>
                    <h2 class="text-8xl font-bold text-navy mb-6">Christian</h2>
                </div>
                <p class="text-gray-700 text-lg mb-8 max-w-4xl mx-auto" itemprop="description">
                    To inquire about a property or press event, please fill out the form below.
                </p>
                
            </div>
            
            <div class="max-w-4xl mx-auto">
                <form class="space-y-6 text-left" role="form" aria-label="Contact Christian Fuentes">
                    <!-- Row 1: First Name & Last Name -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label for="firstName" class="sr-only">First Name</label>
                            <input type="text"
                                   id="firstName"
                                   name="firstName"
                                   placeholder="First Name"
                                   required
                                   aria-required="true"
                                   class="w-full px-0 py-3 bg-transparent text-black placeholder-gray-600 border-0 border-b border-[#141414] focus:outline-none focus:border-blue-600 transition-colors duration-300">
                        </div>
                        <div>
                            <label for="lastName" class="sr-only">Last Name</label>
                            <input type="text"
                                   id="lastName"
                                   name="lastName"
                                   placeholder="Last Name"
                                   required
                                   aria-required="true"
                                   class="w-full px-0 py-3 bg-transparent text-black placeholder-gray-600 border-0 border-b border-[#141414] focus:outline-none focus:border-blue-600 transition-colors duration-300">
                        </div>
                    </div>
                    
                    <!-- Row 2: Email & Phone -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label for="email" class="sr-only">Email Address</label>
                            <input type="email"
                                   id="email"
                                   name="email"
                                   placeholder="Email Address"
                                   required
                                   aria-required="true"
                                   class="w-full px-0 py-3 bg-transparent text-black placeholder-gray-600 border-0 border-b border-[#141414] focus:outline-none focus:border-blue-600 transition-colors duration-300">
                        </div>
                        <div>
                            <label for="phone" class="sr-only">Phone</label>
                            <input type="tel"
                                   id="phone"
                                   name="phone"
                                   placeholder="Phone"
                                   class="w-full px-0 py-3 bg-transparent text-black placeholder-gray-600 border-0 border-b border-[#141414] focus:outline-none focus:border-blue-600 transition-colors duration-300">
                        </div>
                    </div>
                    
                    <!-- Row 3: Full Width Message -->
                    <div>
                        <label for="message" class="sr-only">Message</label>
                        <textarea rows="5"
                                  id="message"
                                  name="message"
                                  placeholder="Message"
                                  required
                                  aria-required="true"
                                   class="w-full px-0 py-3 bg-transparent text-black placeholder-gray-600 border-0 border-b border-[#141414] focus:outline-none focus:border-blue-600 transition-colors duration-300 resize-none"></textarea>
                    </div>
                    
                    <div class="flex justify-center">
                        <button type="submit"
                               aria-label="Send message to Christian Fuentes"
                               class="btn-primary-yellow">
                            <span>Submit</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>

    <!-- Fixed Parallax Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fixedBg = document.querySelector('.fixed-parallax-bg');
            
            if (fixedBg) {
                // Fixed background parallax - no JavaScript needed
                // The CSS background-attachment: fixed handles the effect
                console.log('Fixed background parallax initialized');
            }
        });
    </script>
</section>