<section
  id="about"
  class="bg-white"
  itemscope
  itemtype="https://schema.org/Person"
  aria-labelledby="about-heading"
>
  <div class="w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-0 items-stretch min-h-screen">
      <!-- LEFT COLUMN: UNTOUCHED -->
      <div class="relative">
        <img
          src="/images/christian-fuentes-animated-image-1.gif"
          alt="Christian Fuentes - Premier luxury real estate agent in Chino Hills, CA"
          class="w-full h-full object-cover aspect-square lg:aspect-auto lg:min-h-screen"
          itemprop="image"
          loading="lazy"
        />
      </div>

      <!-- RIGHT COLUMN: MOBILE-OPTIMIZED + PADDED -->
      <div class="px-4 sm:px-6 lg:px-16 py-12 md:py-16 lg:py-20 flex flex-col justify-center min-h-screen">

        <!-- Section Heading -->
        <div class="text-center py-12 md:py-16 lg:py-20">
          <p class="title-animation-1 text-gold text-xs sm:text-sm font-medium tracking-[0.3em] uppercase mb-4 sm:mb-6 font-poppins" itemprop="name">
            Christian Fuentes
          </p>

          <div class="relative">
            <h2 class="title-animation-1 text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-black mb-6 md:mb-8 font-playfair leading-tight">
              Award-Winning<br>Chino Hills, CA Realtor<sup><span class="text-xl">Â®</span></sup>
            </h2>

            <div class="flex title-animation-1 items-center justify-center space-x-4 mb-6 sm:mb-8">
              <div class="w-12 sm:w-16 h-px bg-gradient-to-r from-transparent to-gold"></div>
              <div class="w-2 h-2 bg-gold rotate-45"></div>
              <div class="w-6 sm:w-8 h-px bg-gold"></div>
              <div class="w-2 h-2 bg-gold rotate-45"></div>
              <div class="w-12 sm:w-16 h-px bg-gradient-to-l from-transparent to-gold"></div>
            </div>
          </div>
                  <meta itemprop="jobTitle" content="Realtor" />

        <p class="title-animation-1 text-center text-black text-base sm:text-lg mb-6 sm:mb-8 leading-relaxed sm:leading-loose" itemprop="description">
          Christian Fuentes, co-owner of RE/MAX Top Producers in Diamond Bar, CA, and a trusted Realtor in Chino Hills, brings over 20 years of real estate expertise helping buyers, sellers, and investors achieve their goals. Known for rehabbing and flipping more than 300 properties in the past eight years, Christian has consistently delivered results, averaging 140 sales per year and earning placement in the prestigious RE/MAX Diamond Club and recognition among the Top 10 RE/MAX teams in California and Hawaii. Together with his wife and business partner, Jeannette, Christian leads three RE/MAX Top Producers offices in Diamond Bar, Brea, and Chino Hills, combining award-winning service with a family-focused approach to real estate.
        </p>

        <button
          class="title-animation-1 btn-primary-yellow w-full sm:w-fit px-6 sm:px-8 mx-auto block"
          aria-label="Learn more about Christian Fuentes background and experience"
          onclick="window.location.href='/about'"
        >
          <span>Learn More About Christian</span>
        </button>
        </div>
        <!-- END Section Heading -->


      </div>
    </div>
  </div>
</section>
