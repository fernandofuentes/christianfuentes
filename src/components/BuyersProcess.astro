---
---

<section class="relative py-20 bg-white overflow-hidden" itemscope itemtype="https://schema.org/Place">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/chino-hills-ca-3.jpg"
      alt="Chino Hills California neighborhoods background"
      class="w-full h-full object-cover opacity-50"
      loading="lazy"
      decoding="async"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/20 to-black/50"></div>
  </div>
        <div class="relative z-10 w-full px-12 sm:px-18 lg:px-24">
            <!-- Luxury Section Heading -->
            <div class="text-center py-20 relative">
               
                
                <!-- Subtitle -->
                <p class="text-gold text-sm font-medium tracking-[0.3em] uppercase mb-6 font-poppins">
                    Your Journey Home
                </p>
                
                <!-- Main Title with Luxury Styling -->
                <div class="relative">
                    <h2 class="text-6xl md:text-7xl lg:text-8xl font-bold text-black mb-8 font-playfair leading-tight">
                        The Buying
                        <span class="block text-gold italic">Process</span>
                    </h2>
                    
                    <!-- Decorative flourish -->
                    <div class="flex items-center justify-center space-x-4 mb-8">
                        <div class="w-16 h-px bg-gradient-to-r from-transparent to-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-8 h-px bg-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-16 h-px bg-gradient-to-l from-transparent to-gold"></div>
                    </div>
                </div>
                
                <!-- Elegant description -->
                <p class="text-black/80 text-lg max-w-2xl mx-auto leading-relaxed font-light">
                    A personalized approach to finding and securing your perfect luxury home
                </p>
            </div>
            
            <!-- Process Steps -->
            <div class="max-w-6xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    <!-- Step 1 -->
                    <div class="process-step group relative p-8 transition-all duration-500 hover:border-black hover:shadow-lg hover:shadow-black/10">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-black"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-black/30"></div>
                        
                        <div class="relative text-center">
                            <!-- Step Number -->
                            <div class="w-16 h-16 bg-gold/10 border border-gold/30 rounded-full flex items-center justify-center mx-auto mb-6 transition-all duration-500 group-hover:bg-black/10 group-hover:border-black">
                                <span class="text-2xl font-bold text-gold">1</span>
                            </div>
                            
                            <!-- Step Title -->
                            <h3 class="text-xl font-bold text-black mb-4 font-playfair">Initial Consultation</h3>
                            
                            <!-- Step Description -->
                            <p class="text-black/80 text-sm leading-relaxed">
                                Understanding your needs, preferences, and budget to create a personalized home search strategy
                            </p>
                        </div>
                    </div>
                    
                    <!-- Step 2 -->
                    <div class="process-step group relative p-8 transition-all duration-500 hover:border-black hover:shadow-lg hover:shadow-black/10">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-black"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-black/30"></div>
                        
                        <div class="relative text-center">
                            <!-- Step Number -->
                            <div class="w-16 h-16 bg-gold/10 border border-gold/30 rounded-full flex items-center justify-center mx-auto mb-6 transition-all duration-500 group-hover:bg-black/10 group-hover:border-black">
                                <span class="text-2xl font-bold text-gold">2</span>
                            </div>
                            
                            <!-- Step Title -->
                            <h3 class="text-xl font-bold text-black mb-4 font-playfair">Pre-Approval</h3>
                            
                            <!-- Step Description -->
                            <p class="text-black/80 text-sm leading-relaxed">
                                Connecting you with trusted lenders to secure financing and strengthen your buying position
                            </p>
                        </div>
                    </div>
                    
                    <!-- Step 3 -->
                    <div class="process-step group relative p-8 transition-all duration-500 hover:border-black hover:shadow-lg hover:shadow-black/10">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-black"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-black/30"></div>
                        
                        <div class="relative text-center">
                            <!-- Step Number -->
                            <div class="w-16 h-16 bg-gold/10 border border-gold/30 rounded-full flex items-center justify-center mx-auto mb-6 transition-all duration-500 group-hover:bg-black/10 group-hover:border-black">
                                <span class="text-2xl font-bold text-gold">3</span>
                            </div>
                            
                            <!-- Step Title -->
                            <h3 class="text-xl font-bold text-black mb-4 font-playfair">Property Search</h3>
                            
                            <!-- Step Description -->
                            <p class="text-black/80 text-sm leading-relaxed">
                                Exclusive access to luxury listings and private showings of properties that match your criteria
                            </p>
                        </div>
                    </div>
                    
                    <!-- Step 4 -->
                    <div class="process-step group relative p-8 transition-all duration-500 hover:border-black hover:shadow-lg hover:shadow-black/10">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-black"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-black/30"></div>
                        
                        <div class="relative text-center">
                            <!-- Step Number -->
                            <div class="w-16 h-16 bg-gold/10 border border-gold/30 rounded-full flex items-center justify-center mx-auto mb-6 transition-all duration-500 group-hover:bg-black/10 group-hover:border-black">
                                <span class="text-2xl font-bold text-gold">4</span>
                            </div>
                            
                            <!-- Step Title -->
                            <h3 class="text-xl font-bold text-black mb-4 font-playfair">Closing & Beyond</h3>
                            
                            <!-- Step Description -->
                            <p class="text-black/80 text-sm leading-relaxed">
                                Expert negotiation, seamless closing process, and ongoing support as your trusted advisor
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>