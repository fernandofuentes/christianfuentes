---
---

<section class="py-20 bg-navy-dark" itemscope itemtype="https://schema.org/Service">
    <!-- Luxury Background Pattern -->
    <div class="relative overflow-hidden">
      
        <div class="relative z-10 w-full px-12 sm:px-18 lg:px-24">
            <!-- Luxury Section Heading -->
            <div class="text-center py-20 relative">
                
                <!-- Subtitle -->
                <p class="text-gold text-sm font-medium tracking-[0.3em] uppercase mb-6 font-poppins">
                    Market Intelligence
                </p>
                
                <!-- Main Title with Luxury Styling -->
                <div class="relative">
                    <h2 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-8 font-playfair leading-tight">
                        Buyer
                        <span class="block text-gold italic">Advantages</span>
                    </h2>
                    
                    <!-- Decorative flourish -->
                    <div class="flex items-center justify-center space-x-4 mb-8">
                        <div class="w-16 h-px bg-gradient-to-r from-transparent to-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-8 h-px bg-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-16 h-px bg-gradient-to-l from-transparent to-gold"></div>
                    </div>
                </div>
                
                <!-- Elegant description -->
                <p class="text-white/80 text-lg max-w-2xl mx-auto leading-relaxed font-light">
                    Exclusive insights and strategic advantages that give you the edge in today's competitive market
                </p>
                
            </div>
            
            <!-- Market Stats Grid -->
            <div class="max-w-6xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
                    <!-- Stat 1 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">300+</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Happy Buyers</div>
                        </div>
                    </div>
                    
                    <!-- Stat 2 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">$1.2B+</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Buyer Purchases</div>
                        </div>
                    </div>
                    
                    <!-- Stat 3 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">95%</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Offer Acceptance Rate</div>
                        </div>
                    </div>
                    
                    <!-- Stat 4 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">21</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Avg Days to Close</div>
                        </div>
                    </div>
                </div>

                <!-- Buyer Advantages -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <!-- Content -->
                    <div>
                        <h3 class="text-3xl font-bold text-gold mb-6 font-playfair">
                            Your Competitive Edge
                        </h3>
                        <div class="space-y-6">
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Exclusive Access</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        First access to off-market properties and pocket listings before they hit the public market.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Strategic Negotiation</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Expert negotiation tactics that secure favorable terms and pricing in competitive situations.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Market Intelligence</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Real-time market data and neighborhood insights to make informed buying decisions.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-8">
                            <a href="/consultation" class="btn-primary-yellow" aria-label="Schedule your buyer consultation">
                                <span>Schedule Buyer Consultation</span>
                            </a>
                        </div>
                    </div>
                    
                    <!-- Visual Element -->
                    <div class="relative">
                        <div class="aspect-square bg-gradient-to-br from-gold/20 to-gold/5 border border-gold/30 flex items-center justify-center">
                            <div class="text-center">
                                <div class="text-6xl font-bold text-gold mb-4 font-playfair">VIP</div>
                                <div class="text-white/80 text-lg">Buyer Program</div>
                                <div class="text-white/60 text-sm mt-2">Exclusive Benefits</div>
                            </div>
                        </div>
                        
                        <!-- Decorative elements -->
                        <div class="absolute -top-4 -left-4 w-8 h-8 border-l-2 border-t-2 border-gold/50"></div>
                        <div class="absolute -top-4 -right-4 w-8 h-8 border-r-2 border-t-2 border-gold/50"></div>
                        <div class="absolute -bottom-4 -left-4 w-8 h-8 border-l-2 border-b-2 border-gold/50"></div>
                        <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r-2 border-b-2 border-gold/50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>