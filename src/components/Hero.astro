<section class="relative h-screen flex items-center justify-center overflow-hidden" itemscope itemtype="https://schema.org/WPHeader">
    <!-- Background Image -->
    <!-- Background Video -->
    <div class="absolute inset-0 z-0 parallax-container">
<video
  autoplay
  muted
  loop
  playsinline
  class="w-full h-full object-cover"
  poster="/images/christian-fuentes-hero-image.jpg"
  aria-hidden="true"
>
  <source src="/videos/homepage-background-video.webm" type="video/webm">
  <source src="/videos/homepage-background-video.mp4" type="video/mp4">
  <!-- Fallback image if video doesn't load -->
  <img
    src="/images/christian-fuentes-hero-image.jpg"
    alt="Luxury Chino Hills homes showcasing premium real estate by Christian Fuentes"
    class="w-full h-full object-cover"
  >
</video>

        <div class="absolute inset-0 bg-gradient-to-b from-navy-dark/70 via-navy-dark/70 to-navy-dark/70"></div>
    </div>

    <!-- Hero Content -->
    <div class="hero-content relative z-10 text-center max-w-6xl mx-auto px-4 parallax-content" itemscope itemtype="https://schema.org/Organization">
        <p class="hero-subtitle text-white text-sm font-medium tracking-widest uppercase mb-4">
            Christian Fuentes | #1 <span style="color: #0041d9;">Zillow</span> Agent in Chino Hills, CA.
        </p>
        <h1 class="hero-title text-4xl md:text-7xl font-bold text-white mb-4" itemprop="name">
            Your Chino Hills & Surrounding Areas REALTOR
        </h1>
        <p class="hero-description text-sm md:text-2xl text-white mb-12" itemprop="description">
            RE/MAX Top Producers | Diamond Bar, CA
        </p>

        <!-- MLS Search Bar -->
        <div class="hero-search max-w-full sm:max-w-3xl mx-auto mb-8 px-4 sm:px-0" role="search" aria-label="Property search">
            <div class="flex flex-col sm:flex-row gap-4 items-center">
                <input type="text"
                       placeholder="Search by City, Zip, or MLS #"
                       aria-label="Search properties by city, zip code, or MLS number"
                       class="w-full sm:flex-1 px-6 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-transparent">
                <a href="/mls" class="btn-primary-yellow"
                   aria-label="Search for properties">
                    <span>Search</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Animated Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
        <div class="scroll-indicator">
            <svg class="w-10 h-14 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <rect x="7" y="3" width="10" height="16" rx="5" stroke="currentColor" stroke-width="2" fill="none"/>
                <circle cx="12" cy="8" r="1.5" fill="currentColor" class="scroll-dot"/>
            </svg>
        </div>
    </div>

    <!-- Parallax Styles -->
    <style>
        .parallax-content {
            will-change: transform;
            transform: translate3d(0, 0, 0);
        }

        .parallax-container {
            overflow: hidden;
        }

        .scroll-indicator {
            animation: float 3s ease-in-out infinite, bounce 2s infinite;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .scroll-indicator:hover {
            transform: scale(1.2);
            opacity: 0.8;
        }

        .scroll-dot {
            animation: scrollDot 2s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        @keyframes scrollDot {
            0%, 100% { transform: translateY(0px); opacity: 1; }
            50% { transform: translateY(5px); opacity: 0.7; }
        }
    </style>
</section>
