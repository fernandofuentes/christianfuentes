---
---

<section class="py-20 bg-navy" itemscope itemtype="https://schema.org/Service">
    <!-- Luxury Background Pattern -->
    <div class="relative overflow-hidden">
       
        
        <div class="relative z-10 w-full px-12 sm:px-18 lg:px-24">
            <!-- Luxury Section Heading -->
            <div class="text-center py-20 relative">
               
                
                <!-- Subtitle -->
                <p class="text-gold text-sm font-medium tracking-[0.3em] uppercase mb-6 font-poppins">
                    Market Intelligence
                </p>
                
                <!-- Main Title with Luxury Styling -->
                <div class="relative">
                    <h2 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-8 font-playfair leading-tight">
                        Market
                        <span class="block text-gold italic">Analysis</span>
                    </h2>
                    
                    <!-- Decorative flourish -->
                    <div class="flex items-center justify-center space-x-4 mb-8">
                        <div class="w-16 h-px bg-gradient-to-r from-transparent to-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-8 h-px bg-gold"></div>
                        <div class="w-2 h-2 bg-gold rotate-45"></div>
                        <div class="w-16 h-px bg-gradient-to-l from-transparent to-gold"></div>
                    </div>
                </div>
                
                <!-- Elegant description -->
                <p class="text-white/80 text-lg max-w-2xl mx-auto leading-relaxed font-light">
                    Data-driven insights and comprehensive market analysis to position your home for maximum value
                </p>
            </div>
            
            <!-- Market Stats Grid -->
            <div class="max-w-6xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
                    <!-- Stat 1 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">500+</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Homes Sold</div>
                        </div>
                    </div>
                    
                    <!-- Stat 2 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">$2B+</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Total Sales</div>
                        </div>
                    </div>
                    
                    <!-- Stat 3 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">18</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Avg Days on Market</div>
                        </div>
                    </div>
                    
                    <!-- Stat 4 -->
                    <div class="stat-card group relative p-8">
                        <!-- Luxury frame -->
                        <div class="absolute inset-4 border border-gold/20 pointer-events-none transition-all duration-500 group-hover:border-gold/50"></div>
                        <div class="absolute inset-6 border border-gold/10 pointer-events-none transition-all duration-500 group-hover:border-gold/30"></div>
                        
                        <div class="relative text-center">
                            <div class="text-4xl font-bold text-gold mb-2 font-playfair">103%</div>
                            <div class="text-white/80 text-sm uppercase tracking-wider">Avg Sale to List Price</div>
                        </div>
                    </div>
                </div>

                <!-- Market Insights -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <!-- Content -->
                    <div>
                        <h3 class="text-3xl font-bold text-gold mb-6 font-playfair">
                            Why Market Analysis Matters
                        </h3>
                        <div class="space-y-6">
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Optimal Pricing Strategy</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Comprehensive analysis of comparable sales, market trends, and buyer behavior to price your home competitively.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Market Timing</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Understanding seasonal trends and market conditions to determine the best time to list your property.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="flex items-start space-x-4">
                                <div class="w-2 h-2 bg-gold rotate-45 mt-3 flex-shrink-0"></div>
                                <div>
                                    <h4 class="text-white font-semibold mb-2">Competitive Positioning</h4>
                                    <p class="text-white/80 leading-relaxed">
                                        Identifying your home's unique selling points and positioning it effectively against the competition.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-8">
                            <a href="/consultation" class="btn-primary-yellow" aria-label="Get your free market analysis">
                                <span>Get Free Market Analysis</span>
                            </a>
                        </div>
                    </div>
                    
                    <!-- Visual Element -->
                    <div class="relative">
                        <div class="aspect-square bg-gradient-to-br from-gold/20 to-gold/5 border border-gold/30 flex items-center justify-center">
                            <div class="text-center">
                                <div class="text-6xl font-bold text-gold mb-4 font-playfair">CMA</div>
                                <div class="text-white/80 text-lg">Comparative Market Analysis</div>
                                <div class="text-white/60 text-sm mt-2">Detailed Report Available</div>
                            </div>
                        </div>
                        
                        <!-- Decorative elements -->
                        <div class="absolute -top-4 -left-4 w-8 h-8 border-l-2 border-t-2 border-gold/50"></div>
                        <div class="absolute -top-4 -right-4 w-8 h-8 border-r-2 border-t-2 border-gold/50"></div>
                        <div class="absolute -bottom-4 -left-4 w-8 h-8 border-l-2 border-b-2 border-gold/50"></div>
                        <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r-2 border-b-2 border-gold/50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>