<section
    class="relative h-screen flex items-center justify-center overflow-hidden"
    itemscope
    itemtype="https://schema.org/WPHeader"
>
    <!-- Background Video -->
    <div class="absolute inset-0 z-0 parallax-container">
        <video
            autoplay
            muted
            loop
            playsinline
            class="w-full h-full object-cover"
            poster="/images/christian-fuentes-hero-image.jpg"
            aria-hidden="true"
        >
            <source
                src="/videos/christian-fuentes-realtor-hero-video-1.webm"
                type="video/webm"
            />
            <source
                src="/videos/christian-fuentes-realtor-hero-video-1.mp4"
                type="video/mp4"
            />
            <!-- Fallback image if video doesn't load -->
            <img
                src="/images/christian-fuentes-hero-image.jpg"
                alt="Luxury Chino Hills homes showcasing premium real estate by Christian Fuentes"
                class="w-full h-full object-cover"
            />
        </video>
        <div
            class="absolute inset-0 bg-gradient-to-b from-navy/80 via-navy/70 to-navy/90"
        >
        </div>
    </div>

    <!-- Hero Content -->
    <div
        class="hero-content relative z-10 text-center max-w-6xl mx-auto px-4 parallax-content"
        itemscope
        itemtype="https://schema.org/Organization"
    >
        <p
            class="hero-subtitle text-white text-sm font-medium tracking-widest uppercase mb-4"
        >
            LUXURY HOME BUYING EXPERTS
        </p>
        <h1
            class="hero-title text-5xl md:text-7xl font-bold text-white mb-4"
            itemprop="name"
        >
            Find Your Dream
            <span class="block text-gold italic">Home</span>
        </h1>
        <p
            class="hero-description text-xl md:text-2xl text-white mb-12"
            itemprop="description"
        >
            Exclusive access to Chino Hills, CA finest properties
        </p>

        <!-- Property Search Bar -->
        <div
            class="hero-search max-w-2xl mx-auto mb-8"
            role="search"
            aria-label="Property search"
        >
            <div class="flex flex-col sm:flex-row gap-4">
                <input
                    type="text"
                    placeholder="Search by City, Zip, or Property Type"
                    aria-label="Search properties by city, zip code, or property type"
                    class="flex-1 px-6 py-4 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-transparent"
                />
                <button
                    class="btn-primary-yellow"
                    aria-label="Search for properties"
                >
                    <span>Search Properties</span>
                </button>
            </div>
        </div>

        <!-- CTA Button -->
        <a
            href="/consultation"
            class="btn-hero-special"
            aria-label="Schedule a consultation to buy your dream home"
        >
            <span>Schedule Buyer Consultation</span>
        </a>
    </div>

    <!-- Animated Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
        <div class="scroll-indicator">
            <svg
                class="w-10 h-14 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <rect
                    x="7"
                    y="3"
                    width="10"
                    height="16"
                    rx="5"
                    stroke="currentColor"
                    stroke-width="2"
                    fill="none"></rect>
                <circle
                    cx="12"
                    cy="8"
                    r="1.5"
                    fill="currentColor"
                    class="scroll-dot"></circle>
            </svg>
        </div>
    </div>

    <!-- Parallax Script -->
    <script>
        import { gsap } from "gsap";

        document.addEventListener("DOMContentLoaded", () => {
            // Hero text animations
            const tl = gsap.timeline({ delay: 0.5 });

            tl.from(".hero-subtitle", {
                y: 30,
                opacity: 0,
                duration: 0.8,
                ease: "power2.out",
            })
                .from(
                    ".hero-title",
                    { y: 50, opacity: 0, duration: 1, ease: "power2.out" },
                    "-=0.4",
                )
                .from(
                    ".hero-description",
                    { y: 30, opacity: 0, duration: 0.8, ease: "power2.out" },
                    "-=0.6",
                )
                .from(
                    ".hero-search",
                    { y: 40, opacity: 0, duration: 0.8, ease: "power2.out" },
                    "-=0.4",
                )
                .from(
                    ".hero-cta",
                    { y: 30, opacity: 0, duration: 0.8, ease: "power2.out" },
                    "-=0.4",
                );

            // ðŸ‘‰ Type the selected nodes so TS knows they have .style
            const content =
                document.querySelector<HTMLElement>(".parallax-content");

            if (content) {
                let ticking = false;

                function updateParallax() {
                    const scrolled = window.pageYOffset;
                    const rate = scrolled * 0.2;
                    content.style.transform = `translate3d(0, ${rate}px, 0)`;
                    ticking = false;
                }

                function onScroll() {
                    if (!ticking) {
                        requestAnimationFrame(updateParallax);
                        ticking = true;
                    }
                }

                window.addEventListener("scroll", onScroll, { passive: true });
                updateParallax();
            }

            // Also type this so .addEventListener and styles are fine
            const scrollIndicator =
                document.querySelector<HTMLElement>(".scroll-indicator");
            if (scrollIndicator) {
                scrollIndicator.addEventListener("click", () => {
                    window.scrollTo({
                        top: window.innerHeight,
                        behavior: "smooth",
                    });
                });
            }
        });
    </script>

    <!-- Parallax Styles -->
    <style>
        .parallax-content {
            will-change: transform;
            transform: translate3d(0, 0, 0);
        }

        .parallax-container {
            overflow: hidden;
        }

        .scroll-indicator {
            animation:
                float 3s ease-in-out infinite,
                bounce 2s infinite;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .scroll-indicator:hover {
            transform: scale(1.2);
            opacity: 0.8;
        }

        .scroll-dot {
            animation: scrollDot 2s ease-in-out infinite;
        }

        @keyframes float {
            0%,
            100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        @keyframes scrollDot {
            0%,
            100% {
                transform: translateY(0px);
                opacity: 1;
            }
            50% {
                transform: translateY(5px);
                opacity: 0.7;
            }
        }
    </style>
</section>
