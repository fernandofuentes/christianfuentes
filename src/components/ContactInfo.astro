---

---

<section
    id="contact-info"
    class="py-20 bg-navy"
    itemscope
    itemtype="https://schema.org/LocalBusiness"
>
    <div class="w-full">
        <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <h2
                    class="text-4xl md:text-5xl font-bold text-gold mb-6 font-playfair"
                >
                    Visit Our Office
                </h2>
                <p
                    class="text-offwhite text-lg leading-relaxed max-w-2xl mx-auto"
                >
                    Located in the heart of Diamond Bar, our RE/MAX Top
                    Producers office is ready to serve all your real estate
                    needs
                </p>
            </div>

            <!-- Office Info Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
                <!-- Contact Information -->
                <div class="space-y-8">
                    <!-- Office Address -->
                    <div
                        class="contact-card bg-offwhite/5 backdrop-blur-sm border border-offwhite/10 p-8 transition-all duration-500 hover:bg-offwhite/10 hover:border-gold/30"
                        itemscope
                        itemtype="https://schema.org/PostalAddress"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="w-12 h-12 bg-gold/20 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-6 h-6 text-gold"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-xl font-bold text-gold mb-2 font-playfair"
                                >
                                    Office Address
                                </h3>
                                <p
                                    class="text-offwhite text-base leading-relaxed"
                                >
                                    <span itemprop="streetAddress"
                                        >618 N. Diamond Bar Blvd</span
                                    ><br />
                                    <span itemprop="addressLocality"
                                        >Diamond Bar</span
                                    >, <span itemprop="addressRegion">CA</span>
                                    <span itemprop="postalCode">91765</span>
                                </p>
                                <p class="text-offwhite/70 text-sm mt-2">
                                    RE/MAX Top Producers
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Phone Number -->
                    <div
                        class="contact-card bg-offwhite/5 backdrop-blur-sm border border-offwhite/10 p-8 transition-all duration-500 hover:bg-offwhite/10 hover:border-gold/30"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="w-12 h-12 bg-gold/20 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-6 h-6 text-gold"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-xl font-bold text-gold mb-2 font-playfair"
                                >
                                    Phone
                                </h3>
                                <a
                                    href="tel:909-438-2245"
                                    class="text-offwhite text-lg hover:text-gold transition-colors duration-300"
                                    itemprop="telephone"
                                >
                                    (909) 438-2245
                                </a>
                                <p class="text-offwhite/70 text-sm mt-1">
                                    Available 7 days a week
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div
                        class="contact-card bg-offwhite/5 backdrop-blur-sm border border-offwhite/10 p-8 transition-all duration-500 hover:bg-offwhite/10 hover:border-gold/30"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="w-12 h-12 bg-gold/20 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-6 h-6 text-gold"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-xl font-bold text-gold mb-2 font-playfair"
                                >
                                    Email
                                </h3>
                                <a
                                    href="mailto:christian@christianfuentes.com"
                                    class="text-offwhite text-lg hover:text-gold transition-colors duration-300"
                                    itemprop="email"
                                >
                                    christian@christianfuentes.com
                                </a>
                                <p class="text-offwhite/70 text-sm mt-1">
                                    Quick response guaranteed
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Office Hours -->
                    <div
                        class="contact-card bg-offwhite/5 backdrop-blur-sm border border-offwhite/10 p-8 transition-all duration-500 hover:bg-offwhite/10 hover:border-gold/30"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="w-12 h-12 bg-gold/20 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-6 h-6 text-gold"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-xl font-bold text-gold mb-2 font-playfair"
                                >
                                    Office Hours
                                </h3>

                                <!-- ✅ microdata lives on a <meta>, text stays in a normal div -->
                                <meta
                                    itemprop="openingHours"
                                    content="Mo-Su 07:00-21:00"
                                />

                                <div class="text-offwhite text-base space-y-1">
                                    <p>Monday - Sunday: 7:00 AM - 9:00 PM</p>
                                    <p class="text-offwhite/70 text-sm">
                                        Available by appointment outside hours
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- License Info -->
                    <div
                        class="contact-card bg-offwhite/5 backdrop-blur-sm border border-offwhite/10 p-8 transition-all duration-500 hover:bg-offwhite/10 hover:border-gold/30"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="w-12 h-12 bg-gold/20 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-6 h-6 text-gold"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-xl font-bold text-gold mb-2 font-playfair"
                                >
                                    License
                                </h3>
                                <p class="text-offwhite text-base">
                                    CalBRE License #: 01262973
                                </p>
                                <p class="text-offwhite/70 text-sm mt-1">
                                    Licensed California Real Estate Professional
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Google Maps -->
                <div class="space-y-8">
                    <div
                        class="contact-card bg-offwhite/5 backdrop-blur-sm border border-offwhite/10 p-8"
                    >
                        <h3
                            class="text-xl font-bold text-gold mb-6 font-playfair"
                        >
                            Find Us on the Map
                        </h3>

                        <!-- Google Maps Embed -->
                        <div
                            class="aspect-video w-full overflow-hidden rounded-lg border border-gold/20"
                        >
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3306.496312579471!2d-117.81115562428445!3d34.031137773164964!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c32d8047a07d33%3A0x70113b4011fbafe9!2sChristian%20Fuentes%20-%20Remax%20Top%20Producers!5e0!3m2!1sen!2sus!4v1755749279666!5m2!1sen!2sus"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="strict-origin-when-cross-origin"
                                title="Christian Fuentes - RE/MAX Top Producers Office Location - 618 N. Diamond Bar Blvd, Diamond Bar, CA 91765"
                            >
                            </iframe>
                        </div>

                        <!-- Map Actions -->
                        <div class="flex flex-col sm:flex-row gap-4 mt-6">
                            <a
                                href="https://www.google.com/maps/dir//618+N+Diamond+Bar+Blvd,+Diamond+Bar,+CA+91765"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="btn-primary-yellow flex-1"
                                aria-label="Get directions to RE/MAX Top Producers office"
                            >
                                <span>Get Directions</span>
                            </a>
                            <a
                                href="https://www.google.com/maps/place/618+N+Diamond+Bar+Blvd,+Diamond+Bar,+CA+91765"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="btn-hero-special flex-1"
                                aria-label="View RE/MAX Top Producers office on Google Maps"
                            >
                                <span>View on Google Maps</span>
                            </a>
                        </div>
                    </div>

                    <!-- Additional Office Locations -->
                    <div
                        class="contact-card bg-offwhite/5 backdrop-blur-sm border border-offwhite/10 p-8"
                    >
                        <h3
                            class="text-xl font-bold text-gold mb-6 font-playfair"
                        >
                            Additional Locations
                        </h3>
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-2 h-2 bg-gold rotate-45"></div>
                                <div>
                                    <p class="text-offwhite font-semibold">
                                        Brea Office
                                    </p>
                                    <p class="text-offwhite/70 text-sm">
                                        RE/MAX Top Producers
                                    </p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-3">
                                <div class="w-2 h-2 bg-gold rotate-45"></div>
                                <div>
                                    <p class="text-offwhite font-semibold">
                                        Chino Hills Office
                                    </p>
                                    <p class="text-offwhite/70 text-sm">
                                        RE/MAX Top Producers
                                    </p>
                                </div>
                            </div>
                        </div>
                        <p class="text-offwhite/60 text-sm mt-4">
                            Contact us for specific addresses and availability
                            at our additional locations.
                        </p>
                    </div>
                </div>
            </div>

            <!-- CTA Section -->
            <div class="text-center">
                <h3 class="text-2xl font-bold text-gold mb-4">
                    Ready to Get Started?
                </h3>
                <p class="text-offwhite text-lg mb-8 max-w-2xl mx-auto">
                    Whether you're buying, selling, or investing, we're here to
                    help you achieve your real estate goals.
                </p>
                <div
                    class="flex flex-col sm:flex-row gap-4 justify-center items-center"
                >
                    <a
                        href="tel:909-438-2245"
                        class="btn-primary-yellow"
                        aria-label="Call Christian Fuentes now"
                    >
                        <span>Call (909) 438-2245</span>
                    </a>
                    <a
                        href="/consultation"
                        class="btn-hero-special"
                        aria-label="Schedule consultation with Christian Fuentes"
                    >
                        <span>Schedule Consultation</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
